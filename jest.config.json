{
    "preset": "ts-jest",
    "testEnvironment": "node",
  
    "collectCoverage": true,
    "errorOnDeprecated": true,
  
    "showSeed": false,
    "randomize": false,
  
    "reporters": [
      [
        "jest-github-actions-reporter", 
        {
          "silent": false
        }
      ], 
      "default",
      "summary"
    ],
    "verbose": true,
  
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
  
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  }
  