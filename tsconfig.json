{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
    },
    "strict": true,
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "tmp/firestoreCRUD.ts", "tmp/firestoreSeed.ts"],
  "exclude": ["node_modules"],
}
